<h3>会員情報編集</h3>

<% if @user.errors.any? %>
 <ul>
  <h6>
    <%= @user.errors.count %> error prohibited this obj from being updateed:
  </h6>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
 </ul>
<% end %>


<%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
 <p>
   <%= f.label "名前" %>
   <%= f.text_field :name, id:"inputName" %>
 </p>
 <p>
   <%= f.label "自己紹介" %>
   <%= f.text_field :introduction %>
 </p>
 <p>
   <%= f.submit "編集内容を保存" %>
   <%= link_to "退会する", unsubscribe_path %>
 </p>
<% end %>

